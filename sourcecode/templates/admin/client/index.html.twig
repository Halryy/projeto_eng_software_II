{% extends 'base.html.twig' %}

{% set title = 'Clientes' %}

{% block body %}
    <div class="ms-sm-auto col-lg-12 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1>{{ title }}</h1>

            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a href="{{ path('app_admin_client_new') }}" type="button" class="btn btn-sm btn-outline-success">
                        <span class="h6"><i class="fa fa-plus"></i> Adicionar Cliente</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <table class="table data-table table-striped data-tables">
                            <thead>
                            <tr>
                                <th class="text-start">ID</th>
                                <th>Nome</th>
                                <th>Sobrenome</th>
                                <th>Data de Nascimento</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th data-orderable="false" class="text-end">Ações</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td class="text-start">{{ client.id }}</td>
                                    <td>{{ client.firstName }}</td>
                                    <td>{{ client.lastName }}</td>
                                    <td>{{ client.dateOfBirth ? client.dateOfBirth|date('Y-m-d') : '' }}</td>
                                    <td>{{ client.email }}</td>
                                    <td>{{ client.phoneNumber }}</td>
                                    <td data-orderable="false" class="text-end">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                                            {{ include('admin/client/_delete_form.html.twig', { client: client }) }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}