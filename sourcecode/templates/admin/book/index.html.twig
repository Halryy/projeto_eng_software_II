{% extends 'base.html.twig' %}

{% set title = 'Livros' %}

{% block body %}
    <div class="ms-sm-auto col-lg-12 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1>{{ title }}</h1>

            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a href="{{ path('app_admin_book_new') }}" type="button" class="btn btn-sm btn-outline-success">
                        <span class="h6"><i class="fa fa-plus"></i> Adicionar livro</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <table class="table data-table table-striped data-tables">
                            <thead>
                            <tr>
                                <th class="text-start">ID</th>
                                <th>Título</th>
                                <th>ISBN</th>
                                <th>Número de Páginas</th>
                                <th>Quantidade Disponível</th>
                                <th>Idioma</th>
                                <th>Editora</th>
                                <th data-orderable="false" class="text-end">Ações</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for book in books %}
                                <tr>
                                    <td class="text-start">{{ book.id }}</td>
                                    <td>{{ book.title }}</td>
                                    <td>{{ book.isbn }}</td>
                                    <td>{{ book.numberOfPages }}</td>
                                    <td>{{ book.availableQuantity }}</td>
                                    <td>{{ book.language }}</td>
                                    <td>{{ book.publisher }}</td>
                                    <td data-orderable="false" class="text-end">
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_admin_book_edit', {'id': book.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                                            {{ include('admin/book/_delete_form.html.twig', { book: book }) }}
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">Nenhum registro encontrado</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
